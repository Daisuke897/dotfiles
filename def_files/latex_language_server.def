Bootstrap: docker
From: rust:latest
Stage: Rust

%environment
export PATH=/opt/texlab_target/release:$PATH

%post

apt update
apt upgrade -y

apt install git -y

cd /opt

git clone https://github.com/latex-lsp/texlab.git

cd texlab

git checkout v5.15.0

cargo build --release --target-dir=/opt/texlab_target

cd /opt

rm texlab -rf

%runscript

texlab

%labels
